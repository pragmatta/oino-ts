{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "allowSyntheticDefaultImports": true,

    "paths": {
      "@oino-ts/db": ["./db/src/index.ts"],
      "pg": ["./db/node_modules/@types/pg/index.d.ts"],
      "mariadb": ["./mariadb/node_modules/mariadb/types/index.d.ts"],
      "bun:sqlite": ["./db/node_modules/@types/bun/index.d.ts"]
    }
  },
  "include": ["./db/src/index.ts", "./db-bunsqlite/OINODbBunSqlite.ts", "./db-mariadb/OINODbMariadb.ts", "./db-postgresql/OINODbPostgresql.ts"],
  "exclude": [
    "node_modules",
    "_dist",
    "dist",
    "docs",
    "db/src/*.test.ts"
  ]
}
