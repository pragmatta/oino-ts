{
  "name": "oino-ts",
  "bin": {
    "tsc": "./db/node_modules/.bin/tsc.cmd"
  },
  "dependencies": {
    "@types/node": "^22.0.0",
    "@types/bun": "^1.0.0",
    "typedoc": "^0.28.0"
  },
  "scripts": {
    "build:js": "bunx tsc -p ./tsconfig.cjs.json && bunx tsc -p ./tsconfig.esm.json",
    "build:types": "bunx tsc -p ./tsconfig.types.json",
    "build:docs": "bunx typedoc --options ./typedoc.json",
    "build:all": "bun run build:js && bun run build:types && bun run build:docs && bun run packages:update",
    "snapshots:update": "../packages/update_snapshots.cmd",
    "packages:update": "bun run bunsh_update_packages.ts"
  }
}
